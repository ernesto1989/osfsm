<div id="alertModal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card" style="width: 400px; max-width: 90%;">
      <header class="modal-card-head">
        <p class="modal-card-title" id="alertModalTitle">Alert</p>
      </header>
      <section class="modal-card-body has-text-centered">
        <p id="alertModalMessage">This is an alert message.</p>
      </section>
      <footer class="modal-card-foot is-justify-content-center">
        <button class="button is-primary" onclick="closeAlertModal()">OK</button>
      </footer>
    </div>
</div>